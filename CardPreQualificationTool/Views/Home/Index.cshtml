@model Applicant

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Card Pre-Qualification Tool</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            padding-top: 20px;
            padding-left: 20px;
        }
    </style>
</head>
<body>
    <div><h1>Apply for a credit card</h1></div>

    <div>To apply for a credit card, enter your details in the form below:</div>

    <div>
        <form method="post">
            <div class="form-group">
                <label asp-for="FirstName">First name: </label>
                <input type="text" asp-for="FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName">Last name: </label>
                <input type="text" asp-for="LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateOfBirth">Date of birth: </label>
                <input type="date" min="1900-01-01" max="@DateTime.Now.ToString("yyyy-MM-dd")" asp-for="DateOfBirth" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AnnualIncome">Annual income: £</label>
                <input type="number" step="0.01" min="0" asp-for="AnnualIncome" />
                <span asp-validation-for="AnnualIncome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</body>
</html>
